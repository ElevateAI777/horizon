{% liquid
  assign columns = section.settings.columns | default: 3
%}

<div class="benefits-grid-wrapper section-wrapper">
  <div class="benefits-grid spacing-style section color-{{ section.settings.color_scheme }} {{ section.settings.section_width }}" style="{% render 'spacing-style', settings: section.settings %}">
    {% if section.settings.heading != blank %}
      <div class="benefits-grid__header">
        <h2 class="benefits-grid__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="benefits-grid__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="benefits-grid__items" style="--benefits-columns: {{ columns }};">
      {% for block in section.blocks %}
        <div class="benefits-grid__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="benefits-grid__icon">{{ block.settings.icon }}</div>
          {% endif %}
          {% if block.settings.title != blank %}
            <h3 class="benefits-grid__item-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <div class="benefits-grid__item-description rte">{{ block.settings.description }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .benefits-grid-wrapper {
    --benefits-gap: 2rem;
  }

  .benefits-grid {
    padding-block-start: var(--padding-block-start);
    padding-block-end: var(--padding-block-end);
  }

  .benefits-grid__header {
    text-align: center;
    margin-block-end: 3rem;
  }

  .benefits-grid__heading {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-block-end: 1rem;
    color: var(--color-foreground-heading);
  }

  .benefits-grid__subheading {
    font-size: 1.125rem;
    color: var(--color-foreground);
    max-width: 50rem;
    margin-inline: auto;
  }

  .benefits-grid__items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(18rem, 100%), 1fr));
    gap: var(--benefits-gap);
  }

  @media screen and (min-width: 750px) {
    .benefits-grid__items {
      grid-template-columns: repeat(var(--benefits-columns, 3), 1fr);
    }
  }

  .benefits-grid__item {
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .benefits-grid__icon {
    font-size: 3rem;
    margin-block-end: 1.5rem;
    line-height: 1;
  }

  .benefits-grid__item-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-block-end: 1rem;
    color: var(--color-foreground-heading);
  }

  .benefits-grid__item-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
  }
{% endstylesheet %}

