{% liquid
  assign show_header_row = section.settings.show_header_row
%}

<div class="comparison-table-wrapper section-wrapper">
  <div class="comparison-table-section spacing-style section color-{{ section.settings.color_scheme }} {{ section.settings.section_width }}" style="{% render 'spacing-style', settings: section.settings %}">
    {% if section.settings.heading != blank %}
      <div class="comparison-table__header">
        <h2 class="comparison-table__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="comparison-table__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="comparison-table__container">
      <table class="comparison-table">
        {% if show_header_row %}
          <thead>
            <tr>
              <th class="comparison-table__cell comparison-table__cell--header">{{ section.settings.col1_header }}</th>
              <th class="comparison-table__cell comparison-table__cell--header comparison-table__cell--competitor">{{ section.settings.col2_header }}</th>
              <th class="comparison-table__cell comparison-table__cell--header comparison-table__cell--product">{{ section.settings.col3_header }}</th>
            </tr>
          </thead>
        {% endif %}
        <tbody>
          {% for block in section.blocks %}
            <tr {{ block.shopify_attributes }}>
              <td class="comparison-table__cell comparison-table__cell--feature">{{ block.settings.feature }}</td>
              <td class="comparison-table__cell comparison-table__cell--competitor">{{ block.settings.competitor_value }}</td>
              <td class="comparison-table__cell comparison-table__cell--product">{{ block.settings.product_value }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% stylesheet %}
  .comparison-table-section {
    padding-block-start: var(--padding-block-start);
    padding-block-end: var(--padding-block-end);
    position: relative;
  }

  .comparison-table__header {
    text-align: center;
    margin-block-end: 3.5rem;
  }

  .comparison-table__heading {
    font-size: clamp(1.75rem, 5vw, 2.75rem);
    font-weight: 700;
    margin-block-end: 1rem;
    color: var(--color-foreground-heading);
    line-height: 1.2;
  }

  .comparison-table__subheading {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--color-foreground);
    max-width: 50rem;
    margin-inline: auto;
    opacity: 0.85;
  }

  .comparison-table__container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgb(var(--color-shadow-rgb) / 0.08);
  }

  .comparison-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background: var(--color-background);
    min-width: 600px;
  }

  .comparison-table__cell {
    padding: 1.5rem 1.25rem;
    text-align: left;
    border-bottom: 1px solid rgb(var(--color-border-rgb) / 0.08);
    vertical-align: middle;
    transition: background-color 0.2s ease;
  }

  .comparison-table__cell--header {
    font-weight: 700;
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    background: linear-gradient(135deg,
      rgb(var(--color-foreground-rgb) / 0.04) 0%,
      rgb(var(--color-foreground-rgb) / 0.06) 100%);
    border-bottom: 2px solid rgb(var(--color-border-rgb) / 0.12);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .comparison-table__cell--header:first-child {
    border-top-left-radius: 16px;
  }

  .comparison-table__cell--header:last-child {
    border-top-right-radius: 16px;
  }

  .comparison-table__cell--feature {
    font-weight: 600;
    width: 35%;
    font-size: clamp(0.9375rem, 1.25vw, 1rem);
  }

  .comparison-table__cell--competitor {
    width: 32.5%;
    background: rgb(var(--color-border-rgb) / 0.02);
    color: var(--color-foreground);
    opacity: 0.75;
    position: relative;
  }

  .comparison-table__cell--product {
    width: 32.5%;
    background: linear-gradient(135deg,
      rgba(0, 150, 80, 0.03) 0%,
      rgba(0, 150, 80, 0.06) 100%);
    font-weight: 600;
    color: var(--color-foreground-heading);
    position: relative;
  }

  .comparison-table__cell--product::before {
    content: '✓';
    position: absolute;
    left: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.25rem;
    color: rgb(0, 150, 80);
    opacity: 0.6;
  }

  .comparison-table__cell--competitor::before {
    content: '✗';
    position: absolute;
    left: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.25rem;
    color: rgb(200, 50, 50);
    opacity: 0.4;
  }

  .comparison-table__cell--product,
  .comparison-table__cell--competitor {
    padding-left: 2.5rem;
  }

  tbody tr {
    transition: all 0.2s ease;
  }

  tbody tr:hover {
    background: rgb(var(--color-foreground-rgb) / 0.02);
  }

  tbody tr:last-child .comparison-table__cell {
    border-bottom: none;
  }

  tbody tr:last-child .comparison-table__cell:first-child {
    border-bottom-left-radius: 16px;
  }

  tbody tr:last-child .comparison-table__cell:last-child {
    border-bottom-right-radius: 16px;
  }

  @media screen and (max-width: 749px) {
    .comparison-table__header {
      margin-block-end: 2.5rem;
    }

    .comparison-table__container {
      border-radius: 12px;
      margin-inline: -1rem;
      padding-inline: 1rem;
    }

    .comparison-table {
      min-width: 500px;
    }

    .comparison-table__cell {
      padding: 1.25rem 0.875rem;
      font-size: 0.875rem;
    }

    .comparison-table__cell--header {
      font-size: 0.9375rem;
      padding: 1rem 0.875rem;
    }

    .comparison-table__cell--product,
    .comparison-table__cell--competitor {
      padding-left: 2rem;
    }

    .comparison-table__cell--product::before,
    .comparison-table__cell--competitor::before {
      font-size: 1rem;
      left: 0.5rem;
    }

    .comparison-table__cell--header:first-child {
      border-top-left-radius: 12px;
    }

    .comparison-table__cell--header:last-child {
      border-top-right-radius: 12px;
    }

    tbody tr:last-child .comparison-table__cell:first-child {
      border-bottom-left-radius: 12px;
    }

    tbody tr:last-child .comparison-table__cell:last-child {
      border-bottom-right-radius: 12px;
    }
  }
{% endstylesheet %}

