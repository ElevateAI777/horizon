{% liquid
  assign layout = section.settings.layout | default: 'grid'
%}

<div class="info-cards-wrapper section-wrapper">
  <div class="info-cards spacing-style section color-{{ section.settings.color_scheme }} {{ section.settings.section_width }}" style="{% render 'spacing-style', settings: section.settings %}">
    {% if section.settings.heading != blank %}
      <div class="info-cards__header">
        <h2 class="info-cards__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <div class="info-cards__subheading rte">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="info-cards__grid info-cards__grid--{{ layout }}">
      {% for block in section.blocks %}
        <div class="info-card" {{ block.shopify_attributes }}>
          <div class="info-card__content">
            {% if block.settings.icon != blank %}
              <div class="info-card__icon">{{ block.settings.icon }}</div>
            {% endif %}
            {% if block.settings.title != blank %}
              <h3 class="info-card__title">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <div class="info-card__description rte">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .info-cards {
    padding-block-start: var(--padding-block-start);
    padding-block-end: var(--padding-block-end);
  }

  .info-cards__header {
    text-align: center;
    margin-block-end: 3rem;
    max-width: 60rem;
    margin-inline: auto;
  }

  .info-cards__heading {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    margin-block-end: 1.5rem;
    color: var(--color-foreground-heading);
  }

  .info-cards__subheading {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-foreground);
  }

  .info-cards__grid {
    display: grid;
    gap: 2rem;
  }

  .info-cards__grid--grid {
    grid-template-columns: repeat(auto-fit, minmax(min(20rem, 100%), 1fr));
  }

  .info-cards__grid--list {
    grid-template-columns: 1fr;
    max-width: 50rem;
    margin-inline: auto;
  }

  .info-card {
    background: linear-gradient(135deg,
      rgb(var(--color-foreground-rgb) / 0.02) 0%,
      rgb(var(--color-foreground-rgb) / 0.04) 100%);
    border: 2px solid rgb(var(--color-foreground-rgb) / 0.06);
    border-radius: 16px;
    padding: 1.75rem 1.5rem;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
  }

  .info-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg,
      var(--color-foreground-heading) 0%,
      transparent 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .info-card:hover {
    background: linear-gradient(135deg,
      rgb(var(--color-foreground-rgb) / 0.04) 0%,
      rgb(var(--color-foreground-rgb) / 0.06) 100%);
    border-color: rgb(var(--color-foreground-rgb) / 0.12);
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgb(var(--color-shadow-rgb) / 0.08);
  }

  .info-card:hover::before {
    opacity: 0.6;
  }

  .info-card__content {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .info-card__icon {
    font-size: 1.75rem;
    line-height: 1;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .info-card__title {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    font-weight: 700;
    margin-block-end: 0.375rem;
    color: var(--color-foreground-heading);
    line-height: 1.3;
  }

  .info-card__description {
    font-size: clamp(0.9375rem, 1.25vw, 1rem);
    line-height: 1.5;
    color: var(--color-foreground);
    opacity: 0.85;
  }

  .info-card__description ul {
    padding-left: 1.5rem;
    margin-block: 0.5rem;
  }

  .info-card__description li {
    margin-block: 0.5rem;
  }

  @media screen and (max-width: 749px) {
    .info-cards__header {
      margin-block-end: 2.5rem;
    }

    .info-cards__grid {
      gap: 1.25rem;
    }

    .info-card {
      padding: 1.5rem 1.25rem;
      border-radius: 14px;
    }

    .info-card__content {
      gap: 0.875rem;
    }

    .info-card__icon {
      font-size: 1.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
